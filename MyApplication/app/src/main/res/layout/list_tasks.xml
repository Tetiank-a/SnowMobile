<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp" >

    <TextView
        android:id="@+id/taskName"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/taskCreator"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"/>


    <TextView
        android:id="@+id/taskCreator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/taskName"
        app:layout_constraintRight_toLeftOf="@+id/levelName"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/levelName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Level"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/levelIcon"
        app:layout_constraintLeft_toRightOf="@+id/taskCreator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="1"
        android:maxLength="10"
        android:ellipsize="end"/>
    <ImageView
        android:id="@+id/levelIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/taskCreator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelName"/>


</androidx.constraintlayout.widget.ConstraintLayout>