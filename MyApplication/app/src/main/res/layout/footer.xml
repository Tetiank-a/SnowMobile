<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#78ACC5"
    android:layout_alignParentBottom="true" >

        <ImageButton
            android:id="@+id/sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_calendar_today_24"
            android:backgroundTint="@color/button_text_color"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer"
            app:layout_constraintLeft_toLeftOf="@id/parent"
            app:layout_constraintRight_toLeftOf="@+id/tasks"
            app:layout_constraintTop_toTopOf="@id/footer"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_ondemand_video_24_light"
            android:backgroundTint="@color/button_text_color"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer"
            app:layout_constraintLeft_toRightOf="@id/sessions"
            app:layout_constraintRight_toLeftOf="@+id/learn"
            app:layout_constraintTop_toTopOf="@id/footer"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_school_24"
            android:backgroundTint="@color/button_text_color"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer"
            app:layout_constraintLeft_toRightOf="@id/tasks"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@id/footer"
            tools:ignore="SpeakableTextPresentCheck" />


</LinearLayout>